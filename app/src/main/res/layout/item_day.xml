<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center">

        <!-- Метка сегодняшнего дня -->
        <View
            android:id="@+id/day_highlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/bg_current_day"/>

        <!-- Метка выбранной даты -->
        <View
            android:id="@+id/day_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/bg_selected_day"/>

        <TextView
            android:id="@+id/day_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"/>

        <!-- Метка задач (исправленное позиционирование) -->
        <View
            android:id="@+id/task_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/bg_task_dot"
            android:layout_gravity="bottom|end"
            android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>